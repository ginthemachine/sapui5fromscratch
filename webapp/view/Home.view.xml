<mvc:View controllerName="com.orders.ordersapp.controller.Home" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Page id="page" title="{i18n>title}">
		<content>
			<Table id="idOrdersTable" items="{/SalesOrderSet}" growing="true" growingThreshold="25">
				<headerToolbar>
					<OverflowToolbar>
						<Title text="{i18n>tableTitle}"/>
						<ToolbarSpacer/>
						<SearchField width="20%" search="onSearch" value="{/title}"/>
						<Button tooltip="{i18n>sortTooltip}" icon="sap-icon://sort" press="onSort"/>
						<Button tooltip="{i18n>groupTooltip}" icon="sap-icon://group-2" press="onGroup"/>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="{i18n>columnSalesOrderId}"/>
					</Column>
					<Column minScreenWidth="Small" demandPopin="true">
						<Text text="{i18n>columnCustomerName}"/>
					</Column>
					<Column minScreenWidth="Small" demandPopin="true" width="12em">
						<Text text="{i18n>columnStatus}"/>
					</Column>
					<Column hAlign="End" minScreenWidth="Tablet" demandPopin="true" width="12em">
						<Text text="{i18n>columnGrossAmount}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem type="Navigation" press="onPressItem">
						<cells>
							<ObjectIdentifier title="{SalesOrderID}"/>
							<Text text="{CustomerName}"/>
							<ObjectStatus text="{LifecycleStatusDescription}" icon="{ path: 'LifecycleStatus', formatter: '.formatter.statusIndicator' }"
								state="{ path: 'LifecycleStatus', formatter: '.formatter.formatStatus' }"/>
							<ObjectNumber
								number="{ parts: [{ path: 'GrossAmount' }, { path: 'CurrencyCode' }], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }"
								unit="{CurrencyCode}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>